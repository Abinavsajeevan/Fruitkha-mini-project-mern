<script>
  const addressModal = new bootstrap.Modal(document.getElementById('addressModal'));
  const addressModalTitle = document.getElementById('addressModalTitle');
  const addressLabel = document.getElementById('addressLabel');
  const addressText = document.getElementById('addressText');
  const addressPhone = document.getElementById('addressPhone');
  const saveAddress = document.getElementById('saveAddress');
  const addressList = document.getElementById('addressList');

  let currentCard = null; // Track card for edit

  // Open modal for Add
  document.querySelectorAll('#addAddressBtn, #addAddressBtn2').forEach(btn => {
    btn.addEventListener('click', () => {
      currentCard = null;
      addressModalTitle.textContent = 'Add Address';
      addressLabel.value = '';
      addressText.value = '';
      addressPhone.value = '';
      addressModal.show();
    });
  });

  // Open modal for Edit
  document.querySelectorAll('.edit-address').forEach(btn => {
    btn.addEventListener('click', e => {
      const card = e.target.closest('.address-card');
      currentCard = card;
      addressModalTitle.textContent = 'Edit Address';
      addressLabel.value = card.querySelector('h5').textContent;
      addressText.value = card.querySelectorAll('p')[0].textContent;
      addressPhone.value = card.querySelectorAll('p')[1].textContent.replace('Phone: ', '');
      addressModal.show();
    });
  });

  // Save Add/Edit
  saveAddress.addEventListener('click', () => {
    if (!addressLabel.value || !addressText.value || !addressPhone.value) return alert('All fields are required!');
    
    if (currentCard) {
      // Edit existing card
      currentCard.querySelector('h5').textContent = addressLabel.value;
      const paragraphs = currentCard.querySelectorAll('p');
      paragraphs[0].textContent = addressText.value;
      paragraphs[1].textContent = `Phone: ${addressPhone.value}`;
    } else {
      // Add new card
      const card = document.createElement('div');
      card.className = 'address-card shadow-sm';
      card.innerHTML = `
        <h5 class="fw-bold" style="color:#F28123;">${addressLabel.value}</h5>
        <p class="mb-1">${addressText.value}</p>
        <p class="mb-1">Phone: ${addressPhone.value}</p>
        <div class="address-actions mt-2">
          <button class="btn-orange btn-sm edit-address">
            <i class="bi bi-pencil"></i> Edit
          </button>
          <button class="btn btn-outline-danger btn-sm delete-address">
            <i class="bi bi-trash"></i> Delete
          </button>
        </div>`;
      addressList.appendChild(card);

      // Add event listeners to new card buttons
      card.querySelector('.edit-address').addEventListener('click', e => {
        currentCard = card;
        addressModalTitle.textContent = 'Edit Address';
        addressLabel.value = card.querySelector('h5').textContent;
        addressText.value = card.querySelectorAll('p')[0].textContent;
        addressPhone.value = card.querySelectorAll('p')[1].textContent.replace('Phone: ', '');
        addressModal.show();
      });
      card.querySelector('.delete-address').addEventListener('click', () => card.remove());
    }

    addressModal.hide();
  });

  // Optional: Delete existing cards
  document.querySelectorAll('.delete-address').forEach(btn => {
    btn.addEventListener('click', e => e.target.closest('.address-card').remove());
  });
</script>
