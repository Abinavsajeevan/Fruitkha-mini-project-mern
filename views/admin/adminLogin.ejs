<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title>Admin Login</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #051922;
      font-family: 'Segoe UI', sans-serif;
    }

    .login-container {
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .login-card {
      background-color: #fff;
      border: none;
      border-radius: 15px;
      box-shadow: 0 0 25px rgba(0,0,0,0.3);
      width: 100%;
      max-width: 400px;
      padding: 2rem;
      text-align: center;
    }

    .login-card h4 {
      color: #F28123;
      font-weight: 700;
      margin-bottom: 1.5rem;
    }

    .form-control {
      border-radius: 8px;
      border: 1px solid #ddd;
    }

    .form-control:focus {
      border-color: #F28123;
      box-shadow: 0 0 5px rgba(242,129,35,0.5);
    }

    .btn-login {
      background-color: #F28123;
      color: #051922;
      border: none;
      border-radius: 8px;
      padding: 0.6rem;
      font-weight: 600;
      transition: 0.3s;
    }

    .btn-login:hover {
      background-color: #e27a25;
      color: #fff;
    }

    .forgot-link {
      font-size: 0.9rem;
      color: #F28123;
      text-decoration: none;
    }

    .forgot-link:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body>

<div class="login-container">
  <div class="login-card">
    <h4>Admin Login</h4>
    <form action="/admin/login" method="POST">
      	<% if(errors && errors.length) {
								const error = errors.find(err => err.path === 'error');
								if( error ) { %>
									<div class="text-danger " style="text-shadow: 0px 4px 6px rgb(0 0 0);background-color: black;border: 1px solid black;border-radius: 26px 0px;text-align: center;font-size: 13px;font-weight: bold;"><%= error.msg %></div>
									<% }
								} %>
      <div class="mb-3 text-start">
        <label for="email" class="form-label fw-semibold">Email</label>
        <input type="email" id="email" name="email" class="form-control" placeholder="Enter admin email" required>
        
      </div>
	<% if(errors && errors.length) {
								const error = errors.find(err => err.path === 'email');
								if( error ) { %>
									<div class="text-danger " style="text-shadow: 0px 4px 6px rgb(0 0 0);background-color: black;border: 1px solid black;border-radius: 26px 0px;text-align: center;font-size: 13px;font-weight: bold;"><%= error.msg %></div>
									<% }
								} %>
      <div class="mb-3 text-start">
        <label for="password" class="form-label fw-semibold">Password</label>
        <input type="password" id="password" name="password" class="form-control" placeholder="Enter password" >
        
      </div>
	<% if(errors && errors.length) {
								const error = errors.find(err => err.path === 'password');
								if( error ) { %>
									<div class="text-danger " style="text-shadow: 0px 4px 6px rgb(0 0 0);background-color: black;border: 1px solid black;border-radius: 26px 0px;text-align: center;font-size: 13px;font-weight: bold;"><%= error.msg %></div>
									<% }
								} %>
      <div class="d-flex justify-content-between align-items-center mb-3">
        
        <a href="/admin/forgot-password" class="forgot-link">Forgot password?</a>
      </div>

      <button type="submit" class="btn btn-login w-100">Login</button>
    </form>

    <p class="mt-4 text-muted mb-0" style="font-size: 0.9rem;">Â© 2025 My Admin Panel</p>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script>
  
		const inputField = document.getElementsByTagName("input");

		for( field of inputField){
		 field.addEventListener("focus", () => {
			
			 const errors = document.querySelectorAll('.text-danger');
      		errors.forEach(err => err.style.display = 'none');
		 })

		}
	
    </script>
</body>
</html>
