<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title>Admin - Products</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .sidebar {
      width: 150px;
      height: 100vh;
      overflow-y: auto;
      position: sticky;
      top: 0;
      background-color: #051922;
      border-right: 1px solid #033047;
    }
    .sidebar h5 {
      color: #F28123;
      position: sticky;
      top: 0;
      z-index: 2;
      background-color: #051922;
      padding: 0.75rem;
      border-bottom: 1px solid #033047;
    }
    .sidebar .list-group-item {
      background-color: #051922;
      color: white;
      border: none;
      transition: color 0.3s ease, background-color 0.3s ease;
      z-index: 1;
    }
    .sidebar .list-group-item:hover {
      color: #ffffff;
      background-color: #F28123;
    }
    .sidebar .list-group-item.active {
      background-color: #F28123;
      color: #051922;
      font-weight: 600;
    }
    .sidebar::-webkit-scrollbar { display: none; }
  </style>
</head>

<body class="bg-light">
<div class="d-flex">
  <!-- Sidebar -->
  <aside class="sidebar border-end">
    <h5 class="p-3 border-bottom">Admin</h5>
    <nav class="list-group list-group-flush">
      <a href="/admin" class="list-group-item list-group-item-action">Dashboard</a>
      <a href="/admin/orders" class="list-group-item list-group-item-action">Orders</a>
      <a href="/admin/products" class="list-group-item list-group-item-action active">Products</a>
      <a href="/admin/customers" class="list-group-item list-group-item-action">Customers</a>
      <a href="/admin/analytics" class="list-group-item list-group-item-action">Analytics</a>
      <a href="/admin/coupons" class="list-group-item list-group-item-action">Coupons</a>
      <a href="/admin/settings" class="list-group-item list-group-item-action">Settings</a>
      <a href="/admin/support" class="list-group-item list-group-item-action">Support</a>
      <a href="/admin/logs" class="list-group-item list-group-item-action">Logs</a>
      <a href="/admin/profile" class="list-group-item list-group-item-action">Profile</a>
    </nav>
  </aside>

  <!-- Main Content -->
  <main class="flex-fill p-4" style="background-color:#e27a25; color:#000;">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h3 class="mb-0">Products</h3>
      <button class="btn btn-dark" id="addProductBtn">+ Add Product</button>
    </div>

    <!-- Product Table -->
    <div class="card shadow-sm">
      <div class="card-header bg-dark text-white">Product List</div>
      <div class="table-responsive">
        <table class="table table-striped align-middle mb-0">
          <thead>
            <tr>
              <th>#</th>
              <th>Image</th>
              <th>Name</th>
              <th>Category</th>
              <th>Price</th>
              <th>Stock</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% if(products  && products.length > 0) { %>
              <%products.forEach((product, index) => { %>
            <tr>
              <td> <%= index +  1 %> </td>
              <td><img src="<%= product && product.image? product.image:''%>" alt="<%= product.name%>" width="50" class="rounded"></td>
              <td><%= product.name %></td>
              <td> <%= product.category %></td>
              <td>â‚¹<%= product.price %></td>
              <td><%= product.stock %> Kg</td>
              <td>
              <% if(product.stock > 15) { %>
                <span class="badge bg-success"><%= product.status %></span>
                <% } else if(product.stock == 0) { %>
                <span class="badge bg-danger"><%= product.status %></span>
                <% } else { %>
                <span class="badge bg-warning text-dark"><%= product.status %></span>
                <% } %>
              </td>
              <td>
                <form action="/admin/products/edit/<%= product._id %>" method="GET" class="d-inline">
                <button class="btn btn-sm btn-warning me-2 editBtn" 
                      >Edit</button>
                      </form>
                <form action="/admin/products/delete/<%= product._id %>" method="POST" class="d-inline">
                  <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                </form>
              </td>
            </tr>
             <% }) %>
            <% } else { %>
              <tr>
                <td colspan="8" class="text-center py-4 text-muted">
                  <strong>No products found.</strong>
                </td>
              </tr>
              <% } %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Low Stock Section -->
     <% if(products && products.length > 0) { %>
        <% const lowProducts = products.filter(product => product.stock < 16 && product.stock != 0) %>
        <% if(lowProducts.length > 0) { %>
    <div class="card mt-5 shadow-sm">
      <div class="card-header bg-dark text-white">Low Stock Alerts</div>
      <ul class="list-group list-group-flush">
        <% lowProducts.forEach(product => {  %>
        <li class="list-group-item d-flex justify-content-between">
          <span><%= product.name %></span>
          <span class="text-danger"> <%= product.stock %>Kg left</span>
        </li>
        <% }) %>
      </ul>
    </div>
  </main>
</div>

<% } %>
<% } %>

<!-- Add Product Modal -->
<div class="modal fade <%= showAddProductModal ? 'show' : '' %>" 
     id="addProductModal" 
     tabindex="-1" 
     aria-hidden="true"
     style="<%= showAddProductModal ? 'display:block;' : '' %>">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content rounded-4" style="border:2px solid #F28123;">
      <div class="modal-header" style="background-color:#051922; color:#fff;">
        <h5 class="modal-title fw-bold">Add Product</h5>
        <a href="/admin/products"><button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button></a>
      </div>
      <form action="/admin/products/add" method="POST" enctype="multipart/form-data">
        <div class="modal-body" style="background-color:#f8f9fa;">
          <% if (errors && errors.length) {
            const error = errors.find(err => err.path == 'name' || err.path =='category' || err.path == 'price' || err.path == 'stock')
            if(error) { %>
            <div id="addErrorMsg" class="alert alert-danger text-center"><%= error.msg %></div>
          <% }
        } %>
          <% if (errors && errors.length) {
            const error = errors.find(err => err.path == 'success')
            if(error) { %>
            <div id="addErrorMsg" class="alert alert-success text-center"><%= error.msg %></div>
          <% }
        } %>

          <div class="mb-3">
            <label class="form-label">Product Name</label>
            <input type="text" class="form-control" name="name" required>
          </div>
          <div class="mb-3">
            <label class="form-label">Category</label>
            <input type="text" class="form-control" name="category" required>
          </div>
          <div class="mb-3">
            <label class="form-label">Price</label>
            <input type="number" class="form-control" name="price" required>
          </div>
          <div class="mb-3">
            <label class="form-label">Stock</label>
            <input type="number" class="form-control" name="stock" required>
          </div>
          <div class="mb-3">
            <label class="form-label">Product Image</label>
            <input type="file" class="form-control" name="image" accept="image/*">
          </div>
        </div>
        <div class="modal-footer" style="background-color:#051922;">
          <a href="/admin/products">
            <button type="button" class="btn text-white rounded-pill px-4" 
                    style="background-color:#F28123;" data-bs-dismiss="modal">Cancel</button>
          </a>
          <button type="submit" class="btn text-white rounded-pill px-4" 
                  style="background-color:#F28123;">Save Product</button>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Edit Product Modal -->

<div class="modal fade <%= showEditProductModal ? 'show' : '' %>" 
     id="editProductModal" 
     tabindex="-1" 
     aria-hidden="true"
     style="<%= showEditProductModal ? 'display:block;' : '' %>">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content rounded-4" style="border:2px solid #F28123;">
      <div class="modal-header" style="background-color:#051922; color:#fff;">
        <h5 class="modal-title fw-bold">Edit Product</h5>
        <a href="/admin/products"><button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button></a>
      </div>
      <form action="/admin/products/edit" method="POST" enctype="multipart/form-data">
        <input type="hidden" name="id" value="<%= prod ? prod._id : '' %>">
        <div class="modal-body" style="background-color:#f8f9fa;">
            <% if (errors && errors.length) {
            const error = errors.find(err => err.path == 'name' || err.path =='category' || err.path == 'price' || err.path == 'stock')
            if(error) { %>
             <div id="editErrorMsg" class="alert alert-danger text-center"><%= error.msg  %></div>
          <% }
        } %>
          <% if (errors && errors.length) {
            const error = errors.find(err => err.path == 'success')
            if(error) { %>
            <div id="editErrorMsg" class="alert alert-success text-center"><%= error.msg  %></div>
          <% }
        } %>
          <div class="mb-3">
            <label class="form-label">Product Name</label>
            <input type="text" class="form-control" name="name" value="<%= prod ? prod.name : '' %>" required>
          </div>
          <div class="mb-3">
            <label class="form-label">Category</label>
            <input type="text" class="form-control" name="category" value="<%= prod ? prod.category : '' %>" required>
          </div>
          <div class="mb-3">
            <label class="form-label">Price</label>
            <input type="number" class="form-control" name="price" value="<%= prod ? prod.price : '' %>" required>
          </div>
          <div class="mb-3">
            <label class="form-label">Stock</label>
            <input type="number" class="form-control" name="stock" value="<%= prod ? prod.stock : '' %>" required>
          </div>
          <div class="mb-3">
            <label class="form-label">Change Image</label>
            <input type="file" class="form-control" name="image" accept="image/*">
            <small class="text-muted">Upload a new image to replace the existing one.</small>
          </div>
        </div>
        <div class="modal-footer" style="background-color:#051922;">
          <a href="/admin/products">
            <button type="button" class="btn text-white rounded-pill px-4" 
                    style="background-color:#F28123;" data-bs-dismiss="modal">Cancel</button>
          </a>
          <button type="submit" class="btn text-white rounded-pill px-4" 
                   style="background-color:#F28123;">Update Product</button>
        </div>
      </form>
    </div>
  </div>
</div>



<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<script>
  // Add Product Modal Logic
  <% if (showAddProductModal) { %>
    const addModalEl = document.getElementById('addProductModal');
    const addModal = new bootstrap.Modal(addModalEl);
    addModal.show();

    const addErrorDiv = document.getElementById('addErrorMsg');

    addModalEl.querySelectorAll('input').forEach(input => {
      input.addEventListener('focus', () => {
        if (addErrorDiv) addErrorDiv.style.display = 'none';
      });
    });

    addModalEl.addEventListener('hidden.bs.modal', () => {
      if (addErrorDiv) addErrorDiv.style.display = 'none';
      addModalEl.querySelectorAll('input[type=text], input[type=number]').forEach(input => input.value = '');
    });
  <% } %>

  // Edit Product Modal Logic
  <% if (showEditProductModal) { %>
    const editModalEl = document.getElementById('editProductModal');
    const editModal = new bootstrap.Modal(editModalEl);
    editModal.show();

    const editErrorDiv = document.getElementById('editErrorMsg');

    editModalEl.querySelectorAll('input').forEach(input => {
      input.addEventListener('focus', () => {
        if (editErrorDiv) editErrorDiv.style.display = 'none';
      });
    });

    editModalEl.addEventListener('hidden.bs.modal', () => {
      if (editErrorDiv) editErrorDiv.style.display = 'none';
      editModalEl.querySelectorAll('input[type=text], input[type=number]').forEach(input => input.value = '');
    });
  <% } %>
</script>
<script>
  const addProductBtn = document.getElementById('addProductBtn');
  const addProductModal = new bootstrap.Modal(document.getElementById('addProductModal'));

  addProductBtn.addEventListener('click', () => {
    addProductModal.show();
  });

  // For Edit buttons
  document.querySelectorAll('.editBtn').forEach(btn => {
    btn.addEventListener('click', (e) => {
      const id = btn.getAttribute('data-id');
      const name = btn.getAttribute('data-name');
      const category = btn.getAttribute('data-category');
      const price = btn.getAttribute('data-price');
      const stock = btn.getAttribute('data-stock');

      // Fill modal fields
      document.querySelector('#editProductModal input[name="id"]').value = id;
      document.querySelector('#editProductModal input[name="name"]').value = name;
      document.querySelector('#editProductModal input[name="category"]').value = category;
      document.querySelector('#editProductModal input[name="price"]').value = price;
      document.querySelector('#editProductModal input[name="stock"]').value = stock;

      // Show modal
      const editModal = new bootstrap.Modal(document.getElementById('editProductModal'));
      editModal.show();
    });
  });
</script>

</body>
</html>
