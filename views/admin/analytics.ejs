<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title>Analytics - My Admin</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <style>
    /* Sidebar container */
    .sidebar {
      width: 150px;
      height: 100vh;
      overflow-y: auto;
      position: sticky;
      top: 0;
      background-color: #051922;
      border-right: 1px solid #033047;
      transition: all 0.3s ease;
    }

    .sidebar h5 {
      color: #F28123;
      position: sticky;
      top: 0;
      z-index: 2;
      background-color: #051922;
      padding: 0.75rem;
      border-bottom: 1px solid #033047;
    }

    .sidebar .list-group-item {
      background-color: #051922;
      color: white;
      border: none;
      transition: color 0.3s ease, background-color 0.3s ease;
    }

    .sidebar .list-group-item:hover {
      color: #ffffff;
      background-color: #F28123;
    }

    .sidebar .list-group-item.active {
      background-color: #F28123;
      color: #051922;
      font-weight: 600;
      z-index: 0;
    }

    .sidebar::-webkit-scrollbar {
      display: none;
    }

    /* Mobile header */
    .mobile-header {
      background-color: #051922;
      border-bottom: 1px solid #033047;
    }

    /* Hamburger button (3 bars) */
    #menu-toggle {
      border: none;
      background: none;
      width: 30px;
      height: 24px;
      position: relative;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      cursor: pointer;
      padding: 0;
    }

    #menu-toggle::before,
    #menu-toggle::after,
    #menu-toggle span {
      content: '';
      display: block;
      height: 3px;
      width: 100%;
      background-color: white;
      border-radius: 2px;
      transition: all 0.3s ease;
    }

    #menu-toggle.active::before {
      transform: translateY(9px) rotate(45deg);
      background-color: orange;
    }

    #menu-toggle.active::after {
      transform: translateY(-9px) rotate(-45deg);
      background-color: orange;
    }

    #menu-toggle.active span {
      background-color: transparent;
    }

    /* ---------- Responsive ---------- */
    @media (max-width: 991.98px) {
      .sidebar {
        width: 130px;
      }
    }

    @media (max-width: 767.98px) {
      .sidebar {
        width: 100%;
        height: auto;
        position: relative;
        border-right: none;
        border-bottom: 1px solid #033047;
        display: none;
      }

      .sidebar.show {
        display: block;
      }

      main {
        padding: 1rem !important;
      }
    }

    @media (max-width: 575.98px) {
      .sidebar .list-group-item {
        text-align: center;
      }
    }
  </style>
</head>

<body class="bg-light">

  <!-- Header (Visible only on small screens) -->
  <header class="mobile-header d-flex justify-content-between align-items-center p-2 d-md-none">
    <h5 class="mb-0 text-light">My Admin</h5>
    <button id="menu-toggle"><span></span></button>
  </header>

  <!-- Sidebar + Content Wrapper -->
  <div class="d-flex flex-column flex-md-row">

    <!-- Sidebar -->
    <aside class="sidebar border-end" id="sidebar">
      <h5 class="p-3 border-bottom d-none d-md-block">My Admin</h5>
    <nav class="list-group list-group-flush">
      <a href="/admin" class="list-group-item list-group-item-action ">Dashboard</a>
      <a href="/admin/orders" class="list-group-item list-group-item-action">Orders</a>
      <a href="/admin/products" class="list-group-item list-group-item-action ">Products</a>
      <a href="/admin/customers" class="list-group-item list-group-item-action">Customers</a>
      <a href="/admin/analytics" class="list-group-item list-group-item-action active">Analytics</a>
      <a href="/admin/coupons" class="list-group-item list-group-item-action">Coupons</a>
      <a href="/admin/settings" class="list-group-item list-group-item-action">Settings</a>
      <a href="/admin/support" class="list-group-item list-group-item-action">Support</a>
      <a href="/admin/logs" class="list-group-item list-group-item-action">Logs</a>
      <a href="/admin/profile" class="list-group-item list-group-item-action">Profile</a>
    </nav>
    </aside>

    <!-- Main Content -->
    <main class="flex-fill p-4" style="background-color:#e27a25; color:#000; min-height:100vh;">
      <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-2">
        <h3 class="mb-0 text-dark fw-bold">Sales Analytics üçá</h3>
      </div>

      <!-- Quick Stats -->
      <div class="row g-4 mb-4">
        <div class="col-sm-6 col-lg-3">
          <div class="card stat-card shadow-sm text-center p-3">
            <h5 class="text-success">Total Revenue</h5>
            <h3>‚Çπ1,25,600</h3>
            <p class="text-muted mb-0">+12% vs last month</p>
          </div>
        </div>
        <div class="col-sm-6 col-lg-3">
          <div class="card stat-card shadow-sm text-center p-3">
            <h5 class="text-primary">Orders</h5>
            <h3>480</h3>
            <p class="text-muted mb-0">+18 new today</p>
          </div>
        </div>
        <div class="col-sm-6 col-lg-3">
          <div class="card stat-card shadow-sm text-center p-3">
            <h5 class="text-warning">Customers</h5>
            <h3>1,260</h3>
            <p class="text-muted mb-0">+5% growth</p>
          </div>
        </div>
        <div class="col-sm-6 col-lg-3">
          <div class="card stat-card shadow-sm text-center p-3">
            <h5 class="text-danger">Refunds</h5>
            <h3>‚Çπ2,450</h3>
            <p class="text-muted mb-0">2.1% of total</p>
          </div>
        </div>
      </div>

      <!-- Charts -->
      <div class="row g-4">
        <!-- Pie Chart -->
        <div class="col-md-6">
          <div class="card shadow-sm">
            <div class="card-header bg-dark text-white">Category Wise Sales</div>
            <div class="card-body chart-container">
              <canvas id="pieChart"></canvas>
            </div>
          </div>
        </div>

        <!-- Line Chart -->
        <div class="col-md-6">
          <div class="card shadow-sm">
            <div class="card-header bg-dark text-white">Monthly Revenue Growth</div>
            <div class="card-body chart-container">
              <canvas id="lineChart"></canvas>
            </div>
          </div>
        </div>
      </div>

      <!-- Top Products -->
      <div class="card mt-5 shadow-sm">
        <div class="card-header bg-dark text-white">Top Selling Fruits üçâ</div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item d-flex justify-content-between align-items-center">
            Mangoes <span class="badge bg-success rounded-pill">‚Çπ42,000</span>
          </li>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            Apples <span class="badge bg-primary rounded-pill">‚Çπ38,000</span>
          </li>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            Bananas <span class="badge bg-warning text-dark rounded-pill">‚Çπ25,000</span>
          </li>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            Grapes <span class="badge bg-info text-dark rounded-pill">‚Çπ18,500</span>
          </li>
        </ul>
      </div>
    </main>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    const toggleBtn = document.getElementById('menu-toggle');
    const sidebar = document.getElementById('sidebar');
    toggleBtn.addEventListener('click', () => {
      sidebar.classList.toggle('show');
      toggleBtn.classList.toggle('active');
    });

    // Pie Chart
    new Chart(document.getElementById('pieChart'), {
      type: 'pie',
      data: {
        labels: ['Mangoes', 'Apples', 'Bananas', 'Grapes', 'Oranges'],
        datasets: [{
          data: [40, 30, 15, 10, 5],
          backgroundColor: ['#F7B801', '#FF6363', '#FFD166', '#06D6A0', '#118AB2']
        }]
      }
    });

    // Line Chart
    new Chart(document.getElementById('lineChart'), {
      type: 'line',
      data: {
        labels: ['May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct'],
        datasets: [{
          label: 'Revenue (‚Çπ)',
          data: [20000, 30000, 45000, 50000, 60000, 65000],
          borderColor: '#051922',
          backgroundColor: 'rgba(242,129,35,0.2)',
          fill: true,
          tension: 0.4
        }]
      },
      options: {
        scales: {
          y: { beginAtZero: true }
        }
      }
    });
  </script>
</body>
</html>
