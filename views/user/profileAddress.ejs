<script>
  <% if (showAddAddressModal) { %>
    const addAddressModalEl = document.getElementById('addAddressModal');
    const addAddressModal = new bootstrap.Modal(addAddressModalEl);
    addAddressModal.show();

    const msgDiv = document.getElementById('addAddressMsg');

    addAddressModalEl.querySelectorAll('input').forEach(input => {
      input.addEventListener('focus', () => {
        if (msgDiv) msgDiv.style.display = 'none';
      });
    });

    addAddressModalEl.addEventListener('hidden.bs.modal', () => {
      if (msgDiv) msgDiv.style.display = 'none';
      addAddressModalEl.querySelectorAll('input[type=text]').forEach(i => i.value = '');
    });
  <% } %>
</script>

<script>
  // 🧠 Save scroll position before the page unloads
  window.addEventListener("beforeunload", () => {
    localStorage.setItem("scrollPos", window.scrollY);
  });

  // 🧠 Restore scroll position after reload
  window.addEventListener("load", () => {
    const scrollPos = localStorage.getItem("scrollPos");
    if (scrollPos) {
      window.scrollTo(0, parseInt(scrollPos));
      localStorage.removeItem("scrollPos");
    }
  });
</script>



