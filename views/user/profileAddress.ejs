      <form action="/addAddress" method="POST">
        <div class="modal-body">
          <% if (errors && errors.length) { 
              const error = errors.find(err => 
                ['label', 'street', 'city', 'district', 'country', 'pincode', 'phone', 'success'].includes(err.path)
              );
              if (error && error.path === 'success') { %>
                <div id="addAddressMsg" class="alert alert-success text-center"><%= error.msg %></div>
