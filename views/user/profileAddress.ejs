<script>
  <% if (showAddAddressModal) { %>
    const addAddressModalEl = document.getElementById('addAddressModal');
    const addAddressModal = new bootstrap.Modal(addAddressModalEl);
    addAddressModal.show();

    const msgDiv = document.getElementById('addAddressMsg');

    addAddressModalEl.querySelectorAll('input').forEach(input => {
      input.addEventListener('focus', () => {
        if (msgDiv) msgDiv.style.display = 'none';
      });
    });

    addAddressModalEl.addEventListener('hidden.bs.modal', () => {
      if (msgDiv) msgDiv.style.display = 'none';
      addAddressModalEl.querySelectorAll('input[type=text]').forEach(i => i.value = '');
    });
  <% } %>
</script>

<script>
  <% if (showEditAddressModal) { %>
    const editAddressModalEl = document.getElementById('editAddressModal');
    const editAddressModal = new bootstrap.Modal(editAddressModalEl);
    editAddressModal.show();

    const msgDiv = document.getElementById('editAddressMsg');

    // Hide message when user focuses any input
    editAddressModalEl.querySelectorAll('input').forEach(input => {
      input.addEventListener('focus', () => {
        if (msgDiv) msgDiv.style.display = 'none';
      });
    });

    // When modal hides, clear message and reset input fields
    editAddressModalEl.addEventListener('hidden.bs.modal', () => {
      if (msgDiv) msgDiv.style.display = 'none';
      editAddressModalEl.querySelectorAll('input[type=text]').forEach(i => i.value = '');
    });
  <% } %>
</script>


<script>
  // ðŸ§  Save scroll position before the page unloads
  window.addEventListener("beforeunload", () => {
    localStorage.setItem("scrollPos", window.scrollY);
  });

  // ðŸ§  Restore scroll position after reload
  window.addEventListener("load", () => {
    const scrollPos = localStorage.getItem("scrollPos");
    if (scrollPos) {
      window.scrollTo(0, parseInt(scrollPos));
      localStorage.removeItem("scrollPos");
    }
  });
</script>

<script>
document.addEventListener('DOMContentLoaded', () => {
  const editModal = document.getElementById('editAddressModal');
  const form = document.getElementById('editAddressForm');

  // Fires every time any Edit button opens the modal
  editModal.addEventListener('show.bs.modal', event => {
    const button = event.relatedTarget; // the button that opened the modal

    // Extract data attributes from that button
    const id = button.getAttribute('data-id');
    const label = button.getAttribute('data-label');
    const street = button.getAttribute('data-street');
    const city = button.getAttribute('data-city');
    const district = button.getAttribute('data-district');
    const country = button.getAttribute('data-country');
    const pincode = button.getAttribute('data-pincode');
    const phone = button.getAttribute('data-phone');

    // Fill input fields with those values
    form.querySelector('#edit-id').value = id;
    form.querySelector('#edit-label').value = label;
    form.querySelector('#edit-street').value = street;
    form.querySelector('#edit-city').value = city;
    form.querySelector('#edit-district').value = district;
    form.querySelector('#edit-country').value = country;
    form.querySelector('#edit-pincode').value = pincode;
    form.querySelector('#edit-phone').value = phone;

    // Change form action to include that specific address ID
    form.action = `/editAddress`;
  });
});
</script>




