    <h2 class="page-header">Manage Addresses</h2>
    <!-- Add Address Button -->
    <% if(address && address.length > 0) { %>
    <div class="mb-4">
      <button class="btn btn-orange" data-bs-toggle="modal" data-bs-target="#addAddressModal">
        <i class="fas fa-plus me-1"></i> Add Address
      </button>
    </div>

    

    <!-- Address Cards -->
    <% address.forEach(addr => { %>
      <div class="address-card">
        <div class="d-flex justify-content-between align-items-start">
          <div>
            <h5><%= addr.label %> 
             <% if (addr.isDefault) { %>
          <span class="badge  ms-2" style="background-color: #051922; color: #F28123;">Default</span>
        <% } %>
            </h5>
            <p><%= addr.street %></p>
            <p><%= addr.city %> , <%= addr.district %></p>
            <p> <%= addr.country %> - <%= addr.pincode %> </p>
            <p>Phone: <%= addr.phone %> </p>
          </div>
         <div class="d-flex flex-column align-items-end gap-2">
          <!-- Edit -->
          <button
            class="btn btn-sm btn-outline-primary edit-btn"
            data-bs-toggle="modal"
            data-bs-target="#editAddressModal"
            data-id="<%= addr._id %>"
            data-label="<%= addr.label %>"
            data-street="<%= addr.street %>"
            data-city="<%= addr.city %>"
            data-district="<%= addr.district %>"
            data-country="<%= addr.country %>"
            data-pincode="<%= addr.pincode %>"
            data-phone="<%= addr.phone %>"
          >
            <i class="fas fa-edit me-1"></i>Edit
          </button>

