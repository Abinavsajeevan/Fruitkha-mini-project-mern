<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Reset Password</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #051922;
      color: #fff;
      height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .card {
      border: none;
      border-radius: 12px;
      box-shadow: 0px 4px 10px rgba(0,0,0,0.3);
    }
    .card-header {
      background-color: #F28123;
      color: #fff;
      font-weight: bold;
      text-align: center;
      border-top-left-radius: 12px;
      border-top-right-radius: 12px;
    }
    .btn-custom {
      background-color: #F28123;
      color: #fff;
    }
    .btn-custom:hover {
      background-color: #d96f1c;
      color: #fff;
    }
    a {
      color: #F28123;
      text-decoration: none;
    }
    a:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body>

  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6 col-lg-5">
        <div class="card">
          <div class="card-header">
            Reset Password
          </div>
          <div class="card-body p-4">
            <p class="mb-4 text-dark">
              Enter your new password below. Make sure itâ€™s strong and easy for you to remember.
            </p>
            <form action="/resetPassword" method="POST">
              <div class="mb-3">
                <label for="password" class="form-label text-dark">New Password</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Enter new password" required>
                <% if(errors && errors.length ) {
			        const error = errors.find(err => err.path === 'password');
			        if( error) { %>
					<div class="text-danger mt-2" style="text-shadow: 0px 4px 6px rgb(0, 0, 0);background-color: rgb(31, 6, 66);border: 1px solid black;border-radius: 26px 0px;text-align: center;font-size: 13px;font-weight: bold;"><%= error.msg %></div>
				<% }} %>
              </div>

              <div class="mb-3">
                <label for="confirmPassword" class="form-label text-dark">Confirm Password</label>
                <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" placeholder="Re-enter new password" required>
                <% if(errors && errors.length ) {
			        const error = errors.find(err => err.path === 'confirmPassword');
			        if( error) { %>
					<div class="text-danger mt-2" style="text-shadow: 0px 4px 6px rgb(0, 0, 0);background-color: rgb(31, 6, 66);border: 1px solid black;border-radius: 26px 0px;text-align: center;font-size: 13px;font-weight: bold;"><%= error.msg %></div>
				<% }} %>
              </div>

              <button type="submit" class="btn btn-custom w-100">Update Password</button>
            </form>
            <div class="text-center mt-3">
              <a href="/login" id="login">Back to Login</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    const inputs = document.querySelectorAll("input");

    inputs.forEach(input => {
      input.addEventListener("focus", () => {
        const errors = document.querySelectorAll(".text-danger");
        errors.forEach(err => {
          err.style.display = "none";
        });
      });
    });

    const login = document.getElementById('login').addEventListener("click", () => {
      const errors = document.querySelectorAll(".text-danger");
      errors.forEach(err => err.style.display = 'none');
    });
  </script>

</body>
</html>
