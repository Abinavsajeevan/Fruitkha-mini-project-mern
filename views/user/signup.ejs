	<!-- bootsrap icon cdn link -->
	 <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

</head>
<body>
	
	<%- include('partials/header') %>

    	<!-- breadcrumb-section -->
	<div class="breadcrumb-section breadcrumb-bg">
		<div class="container">
			<div class="row">
				<div class="col-lg-8 offset-lg-2 text-center">
					<div class="breadcrumb-text">
						<p>Let's Sign In now</p>
						<h1>Sign in</h1>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- end breadcrumb section -->

<!--================ Register Section =================-->
<!--================ Register Section =================-->
	<section class="register_part section_padding position-relative" 
	style="background:url('./user/assets/img/hero-bg-2.jpg') center/cover no-repeat; padding:80px 0;">
		<div class="container">
			<div class="row justify-content-end">
			<!-- Text on left -->
				<div class="col-lg-4 d-none d-lg-flex flex-column justify-content-center">
					<h1 class="fw-bold mb-3" style="color:#F28123; font-size:2.2rem;">
					Join Fruitkha Today!
					</h1>
					<h6 class="text-dark fs-5">
					Get access to exclusive deals, track your orders, and enjoy a personalized shopping experience.
					</h6>
				</div>

			<!-- Form on right -->
				<div class="col-lg-6 col-md-8">
					<div class="p-5 rounded-4 shadow-lg" 
					style="background:rgba(255, 255, 255, 0); backdrop-filter:blur(8px);">
					<h3 class="text-center fw-bold mb-4" style="color:#F28123;">Create Your Account</h3>

					<!-- Google button -->
					 
					<a href="auth/google" class="btn btn-google w-100"><button class="btn w-100 mb-4 border-0 text-white" 
						style="background-color:#db4437; border-radius:50px;">
						<i class="fab fa-google me-2"></i> Sign Up with Google
					</button></a>

					<% if(errors && errors.length) {
								const error = errors.find(err => err.path === null);
								if( error ) { %>
									<div class="text-danger " style="text-shadow: 0px 4px 6px rgb(0 0 0);background-color: black;border: 1px solid black;border-radius: 26px 0px;text-align: center;font-size: 13px;font-weight: bold;"><%= error.msg %></div>
									<% }
								} %>


					<div class="text-center text-light mb-4">or use your email and mobile number</div>

					
					<form action="/signup" method="POST">
						<div class="form-floating mb-3">
							<input type="text" name="name" class="form-control rounded-pill bg-transparent text-white border-light" id="name" placeholder="Full Name">
							<label for="name" class="text-light">Full Name</label>
							<!-- display error message -->
							<% if(errors && errors.length) {
								const error = errors.find(err => err.path === 'name');
								if( error ) { %>
									<div class="text-danger " style="text-shadow: 0px 4px 6px rgb(0 0 0);background-color: black;border: 1px solid black;border-radius: 26px 0px;text-align: center;font-size: 13px;font-weight: bold;"><%= error.msg %></div>
									<% }
								} %>
						</div>

						<div class="form-floating mb-3">
							<input type="email"  name="email" class="form-control rounded-pill bg-transparent text-white border-light" id="email" placeholder="Email">
							<label for="email" class="text-light">Email Address</label>
								<%# display error message %>
							<% if(errors && errors.length) {
								const error = errors.find(err => err.path === 'email');
								if( error ) { %>
									<div class="text-danger " style="     text-shadow: 0px 4px 6px rgb(0 0 0);background-color: black;border: 1px solid black;border-radius: 26px 0px;text-align: center;font-size: 13px;font-weight: bold;"><%= error.msg %></div>
									<% }
								} %>
						</div>
						

					<%# Mobile Number Field %>
						<div class="form-floating mb-3">
							<input type="tel"  name="mobile" class="form-control rounded-pill bg-transparent text-white border-light" 
								id="mobile" placeholder="Mobile Number" pattern="[0-9]{10}" maxlength="10" required>
							<label for="mobile" class="text-light">Mobile Number</label>
							<%#!-- display error message --%>
							<% if(errors && errors.length) {
								const error = errors.find(err => err.path === 'mobile');
								if( error ) { %>
									<div class="text-danger " style="     text-shadow: 0px 4px 6px rgb(0 0 0);background-color: black;border: 1px solid black;border-radius: 26px 0px;text-align: center;font-size: 13px;font-weight: bold;"><%= error.msg %></div>
									<% }
								} %>
						</div>

						<div class="form-floating mb-3">
							<input type="password"  name="password" class="form-control rounded-pill bg-transparent text-white border-light" id="password" placeholder="Password">
							<label for="password" class="text-light">Password</label>
							<%#!-- display error message --%>
							<% if(errors && errors.length) {
								const error = errors.find(err => err.path === 'password');
								if( error ) { %>
									<div class="text-danger " style="     text-shadow: 0px 4px 6px rgb(0 0 0);background-color: black;border: 1px solid black;border-radius: 26px 0px;text-align: center;font-size: 13px;font-weight: bold;"><%= error.msg %></div>
									<% }
								} %>
						</div>

						<div class="form-floating mb-3">
							<input type="password"  name="confirm" class="form-control rounded-pill bg-transparent text-white border-light" id="confirm" placeholder="Confirm Password">
							<label for="confirm" class="text-light">Confirm Password</label>
							<%#!-- display error message --%>
							<% if(errors ) {
								const error = errors.find(err => err.path === 'confirm');
								const pswdError = errors.find(err => err.path === 'password')
								if( error && !pswdError) { %>
									<div class="text-danger " style="     text-shadow: 0px 4px 6px rgb(0 0 0);background-color: black;border: 1px solid black;border-radius: 26px 0px;text-align: center;font-size: 13px;font-weight: bold;"><%= error.msg %></div>
									<% }
								} %>
						</div>

						<div class="form-check mb-4">
							<input class="form-check-input" type="checkbox" name="terms" id="terms">
							<label class="form-check-label text-light" for="terms">
							I agree to the <a href="#" style="color:#F28123;">Terms & Conditions</a>
							</label>

								<% if(errors && errors.length ) {
								const error = errors.find(err => err.path === 'terms');
								if( error) { %>
									<div class="text-danger " style="     text-shadow: 0px 4px 6px rgb(0 0 0);background-color: black;border: 1px solid black;border-radius: 26px 0px;text-align: center;font-size: 13px;font-weight: bold;"><%= error.msg %></div>
									<% }
								} %>
						</div>
					

						<button type="submit" class="btn w-100 fw-bold text-white" 
							style="background-color:#F28123; border-radius:50px;">
							Register
						</button>
					</form>

					<div class="mt-4 text-center text-light">
						Already have an account? 
						<a href="/login" style="color:#F28123;">Log In</a>
					</div>
					</div>
				</div>
			</div>
		</div>
	</section>

<%#--================ End Register Section =================--%>


