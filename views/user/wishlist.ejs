<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta name="description" content="Responsive Bootstrap4 Shop Template, Created by Imran Hossain from https://imransdesign.com/">

	<!-- title -->
	<title>Shop</title>

	<!-- favicon -->
	<link rel="shortcut icon" type="image/png" href="/user/assets/img/favicon.png">
	<!-- google font -->
	<link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700" rel="stylesheet">
	<link href="https://fonts.googleapis.com/css?family=Poppins:400,700&display=swap" rel="stylesheet">
	<!-- fontawesome -->
	<link rel="stylesheet" href="/user/assets/css/all.min.css">
	<!-- bootstrap -->
	<link rel="stylesheet" href="/user/assets/bootstrap/css/bootstrap.min.css">
	<!-- owl carousel -->
	<link rel="stylesheet" href="/user/assets/css/owl.carousel.css">
	<!-- magnific popup -->
	<link rel="stylesheet" href="/user/assets/css/magnific-popup.css">
	<!-- animate css -->
	<link rel="stylesheet" href="/user/assets/css/animate.css">
	<!-- mean menu css -->
	<link rel="stylesheet" href="/user/assets/css/meanmenu.min.css">
	<!-- main style -->
	<link rel="stylesheet" href="/user/assets/css/main.css">
	<!-- responsive -->
	<link rel="stylesheet" href="/user/assets/css/responsive.css">
	<!-- bootsrap icon cdn link -->
	 <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
<style>
	.wishlist-btn:hover {
  background: transparent; /* prevent white/gray background */
  color: transparent !important; /* orange heart color */
  transform: scale(1.1);
}

/* Optional: when clicked/active */
.wishlist-btn:active {
  transform: scale(0.95);
}
</style>
</head>
<body>
	
	
<%- include('partials/header') %>
	<!--PreLoader-->
    <div class="loader">
        <div class="loader-inner">
            <div class="circle"></div>
        </div>
    </div>
    <!--PreLoader Ends-->
	<!-- search area -->
	<div class="search-area">
		<div class="container">
			<div class="row">
				<div class="col-lg-12">
					<span class="close-btn"><i class="fas fa-window-close"></i></span>
					<div class="search-bar">
						<div class="search-bar-tablecell">
							<h3>Search For:</h3>
							<input type="text" placeholder="Keywords">
							<button type="submit">Search <i class="fas fa-search"></i></button>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- end search arewa -->
	
	<!-- breadcrumb-section -->
	<div class="breadcrumb-section breadcrumb-bg">
		<div class="container">
			<div class="row">
				<div class="col-lg-8 offset-lg-2 text-center">
					<div class="breadcrumb-text">
						<p>Fresh and Organic</p>
						<h1>wishlist</h1>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- end breadcrumb section -->

	<!-- Flash Message -->
<% if (msg && !path) { %>
  <div id="flash-message" class="text-center shadow-sm p-3 rounded  alert alert-success mt-3">
		<%= msg %>
	</div>
<% } %>
<% if (msg && path) { %>
  <div id="flash-message" class="text-center shadow-sm p-3 rounded 
       <%= path === 'success' ? 'alert alert-success' : 'alert alert-warning' %> mt-3">
    <% if (path === 'success') { %>
      <i class="bi bi-check-circle-fill me-2"></i>
    <% } else { %>
      <i class="bi bi-exclamation-circle-fill me-2"></i>
    <% } %>
	<%= msg %>
	</div>
<% } %>

	<!-- headers -->
	<% if (wishlist && products.length > 0) { %>
	<!-- products -->
	<div class="product-section mt-100 mb-150">
		<div class="container">

			<div class="row product-lists">
				<% products.forEach(product => { %>
				<div class="col-lg-4 col-md-6 text-center">
					<div class="single-product-item">
						<!-- Wishlist Button -->
						 <form action="/wishlist/remove?page=<%= currentPage %>" method="POST" style="display:inline;">
							<input type="hidden" name="productId" value="<%= product._id %>">
							<button type="submit" class="wishlist-btn wishlist-add">
							<i class="fas fa-heart"></i>
							</button>
						 </form>

						<!-- Product Image -->
						<div class="product-image">
						<a href="single-product.html">
							<img src="<%= product.image %>" alt="<%= product.name %> image">
						</a>
						</div>

						<!-- Product Name -->
						<h3><%= product.name %></h3>

						<!-- Customer Rating -->
						<div class="product-rating mb-2">
						<i class="fas fa-star" style="color: #F28123;"></i>
						<i class="fas fa-star" style="color: #F28123;"></i>
						<i class="fas fa-star" style="color: #F28123;"></i>
						<i class="fas fa-star" style="color: #F28123;"></i>
						<i class="far fa-star" style="color: #F28123;"></i>
						<span class="ms-2">(4.0)</span>
						</div>

						<!-- Product Price -->
						<p class="product-price"><span>Per Kg</span> â‚¹<%= product.price %></p>

						<!-- Add to Cart Button -->
						 <form  action="/wishlist?page=<%= currentPage %>%>" method="POST">
							<input type="hidden" name="productId" value="<%= product._id %>">
							<input type="hidden" name="page" value="<%= currentPage %>">
							<% if(product.status == 'Out Of Stock') { %>
							<button type="submit" class="cart-btn-customs" disabled>
								<i class="fas fa-shopping-cart"></i> Add to Cart
							</button>
							<p class="text-danger fw-bolder pb-0 mb-0 pt-2" style="font-weight: 900;">Out of stock</p>
							<% } else { %>
							<button type="submit" class="cart-btn-custom">
								<i class="fas fa-shopping-cart"></i> Add to Cart
							</button>
							<p class="<%= product.status == 'Low Stock'? 'text-warning': 'text-success' %> fw-bolder pb-0 mb-0 pt-2" style="font-weight: 900;"><%- product.status == 'Low Stock'? `Only <span class="fw-bolder fs-5  mb-0">${product.stock}</span>Kg left`: product.status %></p>
							
							<% } %>
						</form>
					</div>
				</div>
				<%  }) %>
			</div>

			<div class="row">
				<div class="col-lg-12 text-center">
					<div class="pagination-wrap">
												<%
  const pagesPerGroup = 3;
  const currentGroup = Math.ceil(currentPage / pagesPerGroup);
  const startPage = (currentGroup - 1) * pagesPerGroup + 1;
  const endPage = Math.min(startPage + pagesPerGroup - 1, totalPages);
%>
						<ul>
							<% if (currentPage > 1) { %>
							<li><a href="/shop?page=<%= currentPage - 1 %>">Prev</a></li>
							<% } %>

							  <% for (let i = startPage; i <= endPage; i++) { %>
							<li>
								<a href="/wishlist?page=<%= i %> || '' %>"
								class="<%= i === currentPage ? 'active' : '' %>">
								<%= i %>
								</a>

							</li>
							<% } %>

							<% if (currentPage < totalPages) { %>
							<li><a href="/wishlist?page=<%= currentPage + 1 %>">Next</a></li>
							<% } %>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- end products -->
	<% } else { %>
	<div class="container text-center mt-100 mb-150">
		<div class="alert alert-warning shadow-sm p-4" role="alert" style="font-size: 1.2rem;">
		<i class="bi bi-exclamation-circle-fill text-warning me-2"></i>
		No Wishlist available at the moment. Please add any wislist! ðŸ˜Š
		</div>
	</div>
	<% } %>
	

<%- include('partials/footer') %>
	
	<!-- jquery -->
	<script src="/user/assets/js/jquery-1.11.3.min.js"></script>
	<!-- bootstrap -->
	<!-- <script src="assets/bootstrap/js/bootstrap.min.js"></script> -->
	 <!-- Bootstrap 5 JS Bundle (includes Popper) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

	<!-- count down -->
	<script src="/user/assets/js/jquery.countdown.js"></script>
	<!-- isotope -->
	<script src="/user/assets/js/jquery.isotope-3.0.6.min.js"></script>
	<!-- waypoints -->
	<script src="/user/assets/js/waypoints.js"></script>
	<!-- owl carousel -->
	<script src="/user/assets/js/owl.carousel.min.js"></script>
	<!-- magnific popup -->
	<script src="/user/assets/js/jquery.magnific-popup.min.js"></script>
	<!-- mean menu -->
	<script src="/user/assets/js/jquery.meanmenu.min.js"></script>
	<!-- sticker js -->
	<script src="/user/assets/js/sticker.js"></script>
	<!-- main js -->
	<script src="/user/assets/js/main.js"></script>

<script>
			//  const flashMsg = document.getElementById('flash-message'); 

		window.addEventListener('DOMContentLoaded', () => {
			 const flashMsg = document.getElementById('flash-message'); 
			//  const scrollPlace = document.getElementById('scrollPlace'); 
			 if(flashMsg) { // Scroll to the message smoothly 
			 flashMsg.scrollIntoView({ behavior: 'smooth', block: 'center' });
			
				setTimeout(() => {
				flashMsg.style.display = 'none';
			}, 3000);
    	}
		})
	  </script>

</body>
</html>