<script>
			//  const flashMsg = document.getElementById('flash-message'); 

		window.addEventListener('DOMContentLoaded', () => {
			 const flashMsg = document.getElementById('flash-message'); 
			//  const scrollPlace = document.getElementById('scrollPlace'); 
			 if(flashMsg) { // Scroll to the message smoothly 
			 flashMsg.scrollIntoView({ behavior: 'smooth', block: 'center' });
			
				setTimeout(() => {
				flashMsg.style.display = 'none';
			}, 3000);
    	}
		})
	  </script>

	  <script>
document.addEventListener("DOMContentLoaded", () => {
  const wishlistCartForms = document.querySelectorAll(".wishlist-cart-form");

  wishlistCartForms.forEach(form => {
    const button = form.querySelector(".cart-btn-custom");
    const productId = form.dataset.productId;

    button.addEventListener("click", async () => {
      try {
        const response = await fetch("/wishlist/add-to-cart", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ productId })
        });

        const result = await response.json();

        const oldMsg = form.querySelector(".wishlist-flash");
        if (oldMsg) oldMsg.remove();

        // create new flash message
        const flash = document.createElement("div");
        flash.className = `wishlist-flash text-center px-3 py-1 rounded shadow-sm ${
          result.success ? "bg-success" : "bg-warning"
        }`;
        flash.style.position = "absolute";
        flash.style.bottom = "-35px";
        flash.style.left = "50%";
        flash.style.transform = "translateX(-50%)";
        flash.style.color = "white";
        flash.style.fontWeight = "600";
        flash.style.fontSize = "0.9rem";
        flash.style.zIndex = "50";
        flash.innerHTML = `
          <i class="bi ${
            result.success
              ? "bi-check-circle-fill"
              : "bi-exclamation-circle-fill"
          } me-1"></i> ${result.message}
        `;
        form.appendChild(flash);

        setTimeout(() => flash.remove(), 2000);
      } catch (err) {
        console.error("Wishlist Add-to-Cart AJAX Error:", err);
      }
    });
  });
});
</script>


