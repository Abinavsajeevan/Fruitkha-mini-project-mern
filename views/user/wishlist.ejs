<style>
	.wishlist-btn:hover {
  background: transparent; /* prevent white/gray background */
  color: transparent !important; /* orange heart color */
  transform: scale(1.1);
}

/* Optional: when clicked/active */
.wishlist-btn:active {
  transform: scale(0.95);
}

.disabled-btn {
  background-color: #cccccc !important;
  cursor: not-allowed !important;
  opacity: 0.7;
  pointer-events: none; /* Full disable */
}

