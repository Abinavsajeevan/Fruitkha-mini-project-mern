    <div class="loader">
        <div class="loader-inner">
            <div class="circle"></div>
        </div>
    </div>
    <!--PreLoader Ends-->
	<!-- search area -->
	<div class="search-area">
		<div class="container">
			<div class="row">
				<div class="col-lg-12">
					<span class="close-btn"><i class="fas fa-window-close"></i></span>
					<div class="search-bar">
						<div class="search-bar-tablecell">
							<h3>Search For:</h3>
							<input type="text" placeholder="Keywords">
							<button type="submit">Search <i class="fas fa-search"></i></button>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- end search arewa -->
	
	<!-- breadcrumb-section -->
	<div class="breadcrumb-section breadcrumb-bg">
		<div class="container">
			<div class="row">
				<div class="col-lg-8 offset-lg-2 text-center">
					<div class="breadcrumb-text">
						<p>Fresh and Organic</p>
						<h1>wishlist</h1>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- end breadcrumb section -->

	<!-- Flash Message -->
<% if (msg && !path) { %>
  <div id="flash-message" class="text-center shadow-sm p-3 rounded  alert alert-success mt-3">
		<%= msg %>
	</div>
<% } %>
<% if (msg && path) { %>
  <div id="flash-message" class="text-center shadow-sm p-3 rounded 
       <%= path === 'success' ? 'alert alert-success' : 'alert alert-warning' %> mt-3">
    <% if (path === 'success') { %>
      <i class="bi bi-check-circle-fill me-2"></i>
    <% } else { %>
      <i class="bi bi-exclamation-circle-fill me-2"></i>
    <% } %>
	<%= msg %>
	</div>
<% } %>

	<!-- headers -->
	<% if (wishlist && products.length > 0) { %>
	<!-- products -->
	<div class="product-section mt-100 mb-150">
		<div class="container">

			<div class="row product-lists">
				<% products.forEach(product => { %>
				<div class="col-lg-4 col-md-6 text-center">
					<div class="single-product-item">
						<!-- Wishlist Button -->
						 <form action="/wishlist/remove?page=<%= currentPage %>" method="POST" style="display:inline;">
							<input type="hidden" name="productId" value="<%= product._id %>">
							<button type="submit" class="wishlist-btn wishlist-add">
							<i class="fas fa-heart"></i>
							</button>
						 </form>

						<!-- Product Image -->
						<div class="product-image">
						<a href="single-product.html">
							<img src="<%= product.image %>" alt="<%= product.name %> image">
						</a>
						</div>

						<!-- Product Name -->
						<h3><%= product.name %></h3>

						<!-- Customer Rating -->
						<div class="product-rating mb-2">
						<i class="fas fa-star" style="color: #F28123;"></i>
						<i class="fas fa-star" style="color: #F28123;"></i>
						<i class="fas fa-star" style="color: #F28123;"></i>
						<i class="fas fa-star" style="color: #F28123;"></i>
						<i class="far fa-star" style="color: #F28123;"></i>
						<span class="ms-2">(4.0)</span>
						</div>

						<!-- Product Price -->
						<p class="product-price"><span>Per Kg</span> â‚¹<%= product.price %></p>

						<!-- Add to Cart Button -->
						 <form class="wishlist-cart-form" data-product-id="<%= product._id %>" style="position:relative;">
					<button type="button" class="cart-btn-custom add-to-cart-btn <%= product.status === 'Out Of Stock' ? 'disabled-btn' : '' %>" <%= product.status == 'Out Of Stock' ? 'disabled' : '' %>>
						<i class="fas fa-shopping-cart"></i> Add to Cart
					</button>
					</form>
					<p class="fw-bold mt-3 <%= product.status == 'In Stock'?'text-success':product.status == 'Out Of Stock'? 'text-danger':'text-warning' %>" style="font-weight: 700 !important;"><%= product.status %></p>

					</div>
				</div>
				<%  }) %>
			</div>

			<div class="row">
				<div class="col-lg-12 text-center">
					<div class="pagination-wrap">
												<%
  const pagesPerGroup = 3;
  const currentGroup = Math.ceil(currentPage / pagesPerGroup);
  const startPage = (currentGroup - 1) * pagesPerGroup + 1;
  const endPage = Math.min(startPage + pagesPerGroup - 1, totalPages);
%>
						<ul>
							<% if (currentPage > 1) { %>
							<li><a href="/shop?page=<%= currentPage - 1 %>">Prev</a></li>
							<% } %>

							  <% for (let i = startPage; i <= endPage; i++) { %>
							<li>
								<a href="/wishlist?page=<%= i %> || '' %>"
								class="<%= i === currentPage ? 'active' : '' %>">
								<%= i %>
								</a>

							</li>
							<% } %>

							<% if (currentPage < totalPages) { %>
							<li><a href="/wishlist?page=<%= currentPage + 1 %>">Next</a></li>
							<% } %>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- end products -->
	<% } else { %>
	<div class="container text-center mt-100 mb-150">
		<div class="alert alert-warning shadow-sm p-4" role="alert" style="font-size: 1.2rem;">
		<i class="bi bi-exclamation-circle-fill text-warning me-2"></i>
		No Wishlist available at the moment. Please add any wislist! ðŸ˜Š
		</div>
	</div>
	<% } %>
	

