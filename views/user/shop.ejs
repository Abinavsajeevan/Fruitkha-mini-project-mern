		/* ===== FILTER BAR STYLING ===== */
.filter-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: nowrap;
  gap: 15px;
}

/* Hamburger icon */
.filter-toggle {
  background-color: #F28123;
  color: white;
  border: none;
  font-size: 1.6rem;
  border-radius: 6px;
  padding: 8px 14px;
  cursor: pointer;
  display: none; /* hidden on desktop */
}

/* Filter content (form + button together) */
.filter-content {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  flex: 1;
  gap: 15px;
}

/* Form setup */
.filter-bar form {
  display: flex;
  align-items: center;
  flex-wrap: nowrap;
  gap: 15px;
  width: 100%;
  margin: 0;
}

/* All dropdowns same size */
.custom-select-box {
  flex: 1;
  padding: 8px 12px;
  border-radius: 6px;
  border: 1px solid #ccc;
  background-color: #F28123;
  color: white;
  font-weight: 600;
  min-width: 160px;
  text-align: center;
}

/* Button style */
.filter-btn {
  padding: 8px 16px;
  border-radius: 6px;
  background-color: #F28123;
  color: white;
  border: none;
  transition: 0.3s ease;
  font-weight: 600;
  white-space: nowrap;
}

.filter-btn:hover {
  background-color: #e07010;
}

/* ===== RESPONSIVE ===== */

/* For tablets & below */
@media (max-width: 992px) {
  .filter-bar {
    flex-direction: column;
    align-items: stretch;
  }

  .filter-toggle {
    display: block; /* show hamburger */
    align-self: flex-start;
  }

  .filter-content {
    display: none;
    flex-direction: column;
    width: 100%;
    margin-top: 10px;
  }

  .filter-content.active {
    display: flex;
  }

  .filter-bar form {
    flex-direction: column;
    width: 100%;
  }

  .custom-select-box,
  .filter-btn {
    width: 100%;
  }
}

	</style>

