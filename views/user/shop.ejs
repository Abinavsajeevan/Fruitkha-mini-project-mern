		/* Hamburger icon */
.filter-toggle {
  background-color: #F28123;
  color: white;
  border: none;
  font-size: 1.6rem;
  border-radius: 6px;
  padding: 8px 14px;
  cursor: pointer;
  display: none; /* hidden by default */
}
/* Filter content (form + button) */
.filter-content {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 15px;
}
.filter-bar {
  display: flex;
  align-items: center;
  justify-content: space-between; /* evenly distributes items */
  flex-wrap: wrap;
  gap: 15px; /* consistent spacing between items */
}

.filter-bar form {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex: 1; /* take full row width */
  gap: 15px; /* equal space between selects */
  margin: 0;
}

.custom-select-box {
  flex: 1; /* equal width for all selects */
  min-width: 200px; /* prevents shrinking too small */
  padding: 8px 12px;
  border-radius: 6px;
  border: 1px solid #ccc;
  background-color: #F28123;
}

.filter-btn {
  padding: 8px 16px;
  border-radius: 6px;
  background-color: #F28123;
  color: white;
  border: none;
  transition: 0.3s ease;
  flex-shrink: 0; /* keeps button fixed width */
}

.filter-btn:hover {
  background-color: #F28123;
}


/* Medium screens (tablets) */
@media (max-width: 992px) {


  .custom-select-box,
  .filter-btn {
    flex: 1 1 100%;
    width: 100%;
    max-width: 100%;
  }
   .filter-toggle {
    display: block; /* show hamburger */
  }

  .filter-content {
    display: none; /* hidden initially */
    flex-direction: column;
    width: 100%;
    margin-top: 10px;
  }

  .filter-content.active {
    display: flex; /* shown when toggle clicked */
  }
}

/* Small screens (mobiles) */
@media (max-width: 576px) {

  .custom-select-box,
  .filter-btn {
    flex: 1 1 100%;
    width: 100%;
    max-width: 100%;
  }
  .filter-toggle {
    display: block; /* show hamburger */
  }

  .filter-content {
    display: none; /* hidden initially */
    flex-direction: column;
    width: 100%;
    margin-top: 10px;
  }

  .filter-content.active {
    display: flex; /* shown when toggle clicked */
  }

}


